{
  "name": "metasearchextension",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "lint": "eslint **/*.{js,ts,tsx}",
    "dev:build": "webpack --mode=development",
    "dev:watch": "webpack -w --mode=development",
    "dev:firefox": "concurrently -k \"npm run dev:watch\" \"web-ext --config=web-ext.config.js run\" --restart-tries 3 --restart-after 1000",
    "dev:release": "run-s release:build release:lint release",
    "ci:build": "npm run release:build",
    "ci:test": "npm run release:lint",
    "ci:release": "npm run release",
    "release:build": "webpack --mode=production",
    "release:lint": "npm run lint && cd build && web-ext lint && cd ..",
    "release": "run-s release:clean release:create-dirs release:chrome release:firefox",
    "release:create-dirs": "mkdirp release release/chrome release/firefox",
    "release:clean": "rimraf release/*",
    "release:chrome": "node zip-wrapper.js --out release/chrome/extension.zip --in build/",
    "release:firefox": "run-s release:firefox:build-ext release:firefox:copy-ext release:firefox:zip-src",
    "release:firefox:build-ext": "cd build && web-ext build --overwrite-dest && cd ..",
    "release:firefox:copy-ext": "copyfiles -u ./build/web-ext-artifacts/*.zip ./release/firefox/",
    "release:firefox:zip-src": "node zip-wrapper.js  --out release/firefox/source.zip --in . --exclude .git* release node_modules build .prettier*"
  },
  "author": "",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-redux": "^7.1.11",
    "@types/webpack-env": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.2.1",
    "copyfiles": "^2.4.1",
    "cross-zip-cli": "^1.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.17.0",
    "eslint-config-preact": "^1.1.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-preact": "^0.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^4.3.0",
    "micromatch": "^4.0.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "web-ext": "^5.3.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "yargs": "^16.2.0",
    "zip-dir": "^2.0.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "grommet": "^2.16.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "styled-components": "^5.2.1",
    "webext-redux": "^2.1.7"
  }
}
