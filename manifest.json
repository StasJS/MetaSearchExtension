{
  "manifest_version": 2,
  "name": "MetaSearch",
  "version": "1.0",

  "description": "Helps you switch between search engines quickly and easily.",

  "content_scripts": [
    {
      "matches": [
        "*://*.duckduckgo.com/search*",
        "*://*.google.com/search*",
        "*://*.ecosia.org/search*",
        "*://*.bing.com/search*"
      ],
      "js": ["/content_scripts/index.js"]
    }
  ],

  "permissions": [
    "*://*.duckduckgo.com/search*",
    "*://*.google.com/search*",
    "*://*.ecosia.org/search*",
    "*://*.bing.com/search*"
  ],

  "browser_action": {
    "default_title": "MetaSearch",
    "default_popup": "/popup/index.html"
  },

  "background": {
    "scripts": ["/background/index.js"]
  },

  "icons": {
    "48": "logo-48.png",
    "96": "logo-96.png"
  }
}
